<div class="container has-text-centered">
    <%= form_with(model: @tournament, action: :new) do |f| %>
      <div class="column is-4 is-offset-4">
        <%= f.label 'Enter tournament name' %>
        <%= f.text_field :name, class: "input" %>
      </div>
      <div class="column is-4 is-offset-4">
        <%= button_to 'Create New Tournament!', tournaments_path, method: :post, action_name: :create, class: "button is-success" %>
      </div>
    <% end %>
</div>